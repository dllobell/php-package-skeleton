{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "dllobell/php-package-skeleton",
    "description": "A skeleton for creating my PHP packages.",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "php",
        "package",
        "skeleton"
    ],
    "authors": [
        {
            "name": "David Llobell",
            "email": "dllobellmoya@gmail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/dllobell/php-package-skeleton",
    "require": {
        "php": "^8.4",
        "illuminate/support": "^12.25",
        "laravel/prompts": "^0.3.6"
    },
    "require-dev": {
        "eolica/coding-standard": "^2.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "phpstan/phpstan": "^2.0",
        "rector/rector": "^2.0",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Dllobell\\PhpPackageSkeleton\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dllobell\\PhpPackageSkeleton\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "php configure.php"
        ],
        "lint": [
            "ecs check"
        ],
        "lint-fix": [
            "ecs check --fix"
        ],
        "analyse": [
            "phpstan analyse"
        ],
        "test": [
            "pest --colors=always --parallel"
        ],
        "refactor": [
            "rector process"
        ]
    }
}
